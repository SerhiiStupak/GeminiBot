<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="Creating wares" author="stupak">
        <createTable tableName="wares">
            <column autoIncrement="true" name="wareid" type="int">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="product_name" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="manufacturer" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="price_per_unit" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false" />
            </column>
            <column name="warehouse_number" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="minimum_batch" type="int">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>


    <changeSet id="tag-2.0" author="stupak">
        <tagDatabase tag="2.0" />
    </changeSet>
</databaseChangeLog>